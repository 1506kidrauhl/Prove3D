#!/bin/bash

function central(){
    validacao_java
    jar
}

function validacao_java(){
which java | grep -q /usr/bin/java

if [ $? = 0 ]
    then echo "Instalando o Prove3D..."
    else
      sudo add-apt-repository ppa:webupd8team/java -y
      sudo apt-get update -y
      sudo apt-get install oracle-java8-installer -y
fi

}

function jar(){
    ls_jar=$(sudo ls /usr/local/bin | grep prove3dapp-0.0.1-SNAPSHOT.jar)
    ls_script=$(sudo ls /usr/local/bin | grep script_instalacao.sh)
    diretorio=$(/home/wender/git/Prove3D/Prove3D/prove3dapp/target)
#    if [ prove3dapp-0.0.1-SNAPSHOT.jar != $ls_jar ]
#    then
#    jar_bin=$(sudo cp $diretorio/prove3dapp-0.0.1-SNAPSHOT.jar /usr/local/bin)
#    elif [ teste.sh != $ls_script ]
#    then
#    script_bin=$(sudo cp $diretorio/teste.sh /usr/local/bin)
#    else
    sudo java -jar /usr/local/bin/prove3dapp-0.0.1-SNAPSHOT.jar
#fi
}

central






